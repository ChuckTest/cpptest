    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Active File (UCRT64)", // Updated name slightly for clarity
            "type": "cppdbg",
            "request": "launch",
            // Using the variable to debug the active file's executable
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true, // Keep true for console input (cin)
            "MIMode": "gdb",
            // --- THIS IS YOUR CORRECTED PATH ---
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            // --- END OF CORRECTED PATH ---
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // Make sure this task uses the correct g++ path and builds the active file
            "preLaunchTask": "C/C++: g++.exe build active file"
        },
        {
            "name": "C/C++: cl.exe build and debug active file",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "integratedTerminal",
            "existing": false,
            "preLaunchTask": "C/C++: cl.exe build active file",
            "detail": "preLaunchTask: C/C++: cl.exe build active file",
            "taskDetail": "Task generated by Debugger.",
            "taskStatus": "Recently Used Task",
            "isDefault": true
        }
    ]
}